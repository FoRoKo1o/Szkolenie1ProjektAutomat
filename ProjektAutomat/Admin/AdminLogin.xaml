<Window x:Class="ProjektAutomat.Admin.AdminLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjektAutomat.Admin"
        mc:Ignorable="d"
        Title="AdminLogin" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Login:" HorizontalAlignment="Center" FontSize="30"/>
        <TextBox x:Name="Login" Margin="200,70,200,10" FontSize="30"/>
        <Label Content="Password:" HorizontalAlignment="Center" FontSize="30" Grid.Row="1" />
        <PasswordBox x:Name="password" Grid.Row="1" Margin="200,70,200,10" FontSize="30" />
        <Button Name="login" Content="Login" Grid.Row="2"  Margin="200,5,200,75" FontSize="30" Click="Login_Click"/>
        <Button Name="back" Content="Back" Grid.Row="2"  Margin="200,70,200,10" FontSize="30" Click="Back"/>
        <Label Name="message" Margin="297,45,292,20"/>
    </Grid>
</Window>
